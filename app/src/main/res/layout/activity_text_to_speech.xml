<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1EAFF"
    android:gravity="top"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:hint="Enter text to convert"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColorHint="#546E7A"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />
        </ScrollView>

        <!-- Play button -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/play"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:backgroundTint="#850F8D"
            tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Audio"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:backgroundTint="#850F8D"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/text"
        android:contentDescription="SpeechImage"
        tools:ignore="ContentDescription,HardcodedText" />
</LinearLayout>
